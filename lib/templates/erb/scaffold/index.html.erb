<%%= render :partial => '/admin/public/index_actions' %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <% for attribute in attributes -%>
        <th><%= attribute.name %></th>
      <% end -%>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
		  <% for attribute in attributes -%>
		<td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
		  <% end -%>
        <td>
		  <%%= link_to '', <%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'icon-info-sign' %>
          <%%= link_to '', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'icon-edit' %>
          <%%= link_to '', <%= singular_table_name %>_path(<%= singular_table_name %>), :method => :delete, :data => { :confirm => '确认删除?' }, :class => 'icon-remove' %>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>
<%%= will_paginate @<%= plural_table_name %>, :renderer => BootstrapPagination::Rails %>
