<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= render_page_title %>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

  <%= stylesheet_link_tag "application", :media => "all" %>
	<%= yield :stylesheets %>
    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag 'images/apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>
  </head>
  <%= render_body_tag %> 

    <div class="navbar navbar-fluid-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="javascript:void(0);">网络课堂</a>
          <div class="container-fluid nav-collapse">
			  <p class="navbar-text pull-right">
                <%= @current_user.name %> <%= link_to "退出", logout_path %>
              </p>
            <ul class="nav">
				<!-- 
              <li><%= link_to "产品管理", admin_products_path  %></li>
              <li><%= link_to "老师管理", admin_teachers_path  %></li>
					-->
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <ul id="left_controller_actions" class="nav nav-list">
              <li class="nav-header">管理菜单</li>
			  <% if can? :read, Product %>
              <li<%= request.fullpath.start_with?(admin_products_path) ? ' class=active' : '' %>><%= link_to "课程产品管理", admin_products_path  %></li>
			  <% end %>
			  <% if can? :read, ProductTree %>
			  <li<%= request.fullpath.start_with?(admin_product_trees_path) ? ' class=active' : '' %>><%= link_to "课程树管理", admin_product_trees_path  %></li>
			  <% end %>
			  <% if can? :read, KnowledgeTree %>
			  <li<%= request.fullpath.start_with?(admin_knowledge_trees_path) ? ' class=active' : '' %>><%= link_to "知识点树管理", admin_knowledge_trees_path  %></li>
			  <% end %>
			  <% if can? :read, ProductTreeGroup %>
			  <li<%= request.fullpath.start_with?(admin_product_tree_groups_path) ? ' class=active' : '' %>><%= link_to "课程包管理", admin_product_tree_groups_path  %></li>
			  <% end %>
			  <% if can? :read, Teacher %>
              <li<%= request.fullpath.start_with?(admin_teachers_path) ? ' class=active' : '' %>><%= link_to "老师管理", admin_teachers_path  %></li>
			  <% end %>
			  <% if can? :read, Order %>
              <li<%= request.fullpath.start_with?(admin_orders_path) ? ' class=active' : '' %>><%= link_to "订单管理", admin_orders_path  %></li>
			  <% end %>
			  <% if can? :read, UserAccount %>
			  <li<%= request.fullpath.start_with?(admin_user_accounts_path) ? ' class=active' : '' %>><%= link_to "听课账号管理", admin_user_accounts_path  %></li>
			  <% end %>
			  <% if can? :read, Card %>
			  <li<%= request.fullpath.start_with?(admin_cards_path) ? ' class=active' : '' %>><%= link_to "卡管理", admin_cards_path  %></li>
			  <% end %>
			  <% if can? :read, UsedCardNo %>
			  <li<%= request.fullpath.start_with?(admin_used_card_nos_path) ? ' class=active' : '' %>><%= link_to "注卡管理", admin_used_card_nos_path  %></li>
			  <% end %>
			  <% if can? :read, UserMoneyRecord %>
			  <li<%= request.fullpath.start_with?(admin_user_money_records_path) ? ' class=active' : '' %>><%= link_to "账户记录管理", admin_user_money_records_path  %></li>
			  <% end %>
			  <% if can? :read, GlobalAsset %>
			  <li<%= request.fullpath.start_with?(admin_global_assets_path) ? ' class=active' : '' %>><%= link_to "附件管理", admin_global_assets_path  %></li>
			  <% end %>
			  <% if can? :read, Note %>
			  <li<%= request.fullpath.start_with?(admin_notes_path) ? ' class=active' : '' %>><%= link_to "笔记管理", admin_notes_path  %></li>
			  <% end %>
			  <% if can? :read, Classwork %>
			  <li<%= request.fullpath.start_with?(admin_classworks_path) ? ' class=active' : '' %>><%= link_to "作业项目管理", admin_classworks_path  %></li>
			  <% end %>
			  <% if can? :read, UserClasswork %>
			  <li<%= request.fullpath.start_with?(admin_user_classworks_path) ? ' class=active' : '' %>><%= link_to "作业批改管理", admin_user_classworks_path  %></li>
			  <% end %>
			  <% if can? :read, User %>
			  <li<%= request.fullpath.start_with?(admin_users_path) ? ' class=active' : '' %>><%= link_to "用户管理", admin_users_path  %></li>
			  <% end %>
			  <% if can? :read, SystemMessage %>
			  <li<%= request.fullpath.start_with?(admin_system_messages_path) ? ' class=active' : '' %>><%= link_to "系统消息管理", admin_system_messages_path  %></li>
			  <% end %>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
		  <%= render_breadcrumb %>
		  <%= notice_message %>
          <%= yield %>
        </div>
      </div><!--/row-->

      <footer>
        <p>&copy; Company 2012</p>
      </footer>

    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
	
	<%= yield :javascripts %>
  </body>
</html>
