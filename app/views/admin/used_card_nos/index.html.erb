<%= render :partial => '/admin/public/index_actions' %>

<%= form_for @search, :url => admin_used_card_nos_path, :html => {:method => :get, :class => "form-horizontal"} do |f| %>
<div class="row-fluid">
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :order_code_eq, "订单号：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :order_code_eq %>
    </div>
  </div>
</div>
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :user_name_eq, "用户名：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :user_name_eq %>
    </div>
  </div>
</div>
</div>

<div class="row-fluid">
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :card_name_contains, "卡名称：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :card_name_contains %>
    </div>
  </div>
</div>
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :card_no_code_eq, "卡号：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :card_no_code_eq %>
    </div>
  </div>
</div>

</div>

<div class="row-fluid">
  <div class="span12 bgcolor text-center">
    <div class="control-group">
      <div class="controls">
        <%= f.submit "查询", :disable_with => '查询ing...', :class => "btn" %>
      </div>
    </div>             
  </div>
</div>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>		
		<th>订单号</th>
		<th>用户名</th>
		<th>卡名称</th>
		<th>卡号</th>
		<th>创建时间</th>
    </tr>
  </thead>
  <tbody>
    <% @used_card_nos.each do |used_card_no| %>
      <tr>
		  		<td><%= used_card_no.order_code %></td>
		  		<td><%= used_card_no.user_name %></td>
		  		<td><%= used_card_no.card_name %></td>
		  		<td><%= used_card_no.card_no_code %></td>
		  		<td><%= format_date(used_card_no.created_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @used_card_nos, :renderer => BootstrapPagination::Rails %>
