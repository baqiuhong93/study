<%= render :partial => '/admin/public/index_actions' %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
              <th>名称</th>
              <th>类型</th>
              <th>大小</th>
              <th>用户名</th>
            <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @global_assets.each do |global_asset| %>
      <tr>
  		<td><%= global_asset.data_file_name %></td>
  		<td><%= global_asset.data_content_type %></td>
  		<td><%= global_asset.data_file_size %></td>
  		<td><%= global_asset.user_name %></td>
        <td>
			<% if can? :read, GlobalAsset %>
  		  		<%= link_to '详', admin_global_asset_path(global_asset), :title => '详细' %>
  			<% end %>
			<% if can? :update, GlobalAsset %>
  		  		<%= link_to '改', edit_admin_global_asset_path(global_asset), :title => '修改' %>
  			<% end %>
			<% if can? :destroy, GlobalAsset %>
  		  		<%= link_to '删', admin_global_asset_path(global_asset), :method => :delete, :data => { :confirm => '确认删除?' }, :title => '删除' %>
  			<% end %>
	 	</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @global_assets, :renderer => BootstrapPagination::Rails %>
