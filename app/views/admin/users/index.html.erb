<%= render :partial => '/admin/public/index_actions' %>

<%= form_for @search, :url => admin_users_path, :html => {:method => :get, :class => "form-horizontal"} do |f| %>
<div class="row-fluid">
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :uid_eq, "ID：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :uid_eq %>
    </div>
  </div>
</div>
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :name_eq, "用户名：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name_eq %>
    </div>
  </div>
</div>
</div>

<div class="row-fluid">
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :email_eq, "Email：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :email_eq %>
    </div>
  </div>
</div>
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :full_name_contains, "姓名：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :full_name_contains %>
    </div>
  </div>
</div>
</div>

<div class="row-fluid">
<div class="span6 bgcolor">
  <div class="control-group">
    <%= f.label :mobile_phone_eq, "手机：", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :mobile_phone_eq %>
    </div>
  </div>
</div>
<div class="span6 bgcolor">
  <div class="control-group">
    
    <div class="controls">
      
    </div>
  </div>
</div>
</div>

<div class="row-fluid">
  <div class="span12 bgcolor text-center">
    <div class="control-group">
      <div class="controls">
        <%= f.submit "查询", :disable_with => '查询ing...', :class => "btn" %>
      </div>
    </div>             
  </div>
</div>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>用户名</th>
	  <th>姓名</th>
      <th>邮箱</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.uid, admin_user_path(user) %></td>
        <td><%= user.name %></td>
		<td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= format_date(user.created_at) %></td>
        <td>
		  <%= link_to '', admin_user_path(user), :class => 'icon-info-sign', :title => '详细' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users, :renderer => BootstrapPagination::Rails %>
