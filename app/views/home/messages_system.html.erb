<% @_page_title =   "网校通知公告-欣瑞教育网校" %>
<!--头部 开始-->
<%= render "public/header" %>
<!--头部 结束-->
<div class="mzhr_pos whHd960 mt10">
	<span class="fl">您当前的位置： <a href="<%= root_path %>">我的课堂</a> >> 网校通知</span>
</div>
<div class="min whHd960 mt10">
<%= render "public/left_nav2" %>
<div class="minR">
    <div class="wg_aboutBoxR bd ">
        <div class="wg_tt3"><b>网校通知</b></div>
        <div class="sys_mes_list">
        
        	 <ul>
              <% if @system_messages.empty? %>
            	<li style="text-align:center;"><span class="asv_c2txt">暂无记录</span></li>
            <% end %>
            <% @system_messages.each do |message| %>
            <li>
             <div class="sys_notice"><span class="notice_title stu_title fl">通知公告</span><span class="notice_time fr"><%= message.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span></div>
             <div class="notice_content">
             <%= message.content %>
             </div>
             <div class="clear"></div>
             </li>
             <% end %>
            </ul>
            <div class="clear"></div>
        </div>
        <div class="mpage">
		<% if @page == 1 %>
		<a class="mpage_a" href="javascript:void(0)">首页</a>
		<a class="mpage_a" href="javascript:void(0)">上一页</a>
		<% else %>
	    	<a class="mpage_a" href="<%= user_messages_system_path(:page => 1) %>">首页</a>
	    	<a class="mpage_a" href="<%= user_messages_system_path(:page => @page-1) %>">上一页</a>
		<% end %>
		<% @system_messages_count.times.each do |p| %>
			<% if p+1 == @page %>
				<a class="mpage_a mpage_cuta" href="<%= user_messages_system_path(:page => p+1) %>"><%= p+1 %></a>
			<% else %>
				<a class="mpage_a" href="<%= user_messages_system_path(:page => p+1) %>"><%= p+1 %></a>
			<% end %>
		<% end %>
		<% if @page == @system_messages_count %>
		<a class="mpage_a" href="javascript:void(0)">下一页</a>
		<a class="mpage_a" href="javascript:void(0)">末页</a>
		<% else %>
	    	<a class="mpage_a" href="<%= user_messages_system_path(:page => @page+1) %>">下一页</a>
	    	<a class="mpage_a" href="<%= user_messages_system_path(:page => @system_messages_count) %>">末页</a>
		<% end %>
    </div>
    </div>
</div>
<div class="clear"></div>
</div>
<!--尾部 开始-->
<%= render "public/footer" %>
<!--尾部 结束-->

